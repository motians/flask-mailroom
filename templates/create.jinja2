{% extends 'base.jinja2' %}

{% block subtitle %}Add a donation{% endblock subtitle %}

{% block content %}
<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="name">Donor name: </label><input type="text" id="name" name="name"><br>
    <label for="value">Donation amount: </label><input type="number" id="value" name="value"><br>
    <input type="submit" value="Create Donation">
</form>
{% endblock content %}